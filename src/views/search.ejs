<div class="container text-center" style="padding-bottom: 2%; padding-top: 2%;">
    <h5 style="padding-bottom: 1%; color: red;">SEARCH RESULTS</h5>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            <%products.forEach(product=> { %>
                <tr>
                    <th scope="row"><img src="\images\<%=product.image%>"></th>
                    <td>
                        <%=product.page_title%>
                    </td>
                    <td>
                        <%=product.type%>
                    </td>
                    <td>
                        <a href="/product/single?primary_category_id=<%=product.type%>&id=<%=product.id%>"
                            class="btn btn-info"><i class="fa-solid fa-magnifying-glass"></i> Details</a>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>